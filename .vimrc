set mouse=a
set ttymouse=xterm2
set number

" spell check
set spell
set spelllang=en,cjk

" Enable syntax color
syntax on

" Enable clipboard
set clipboard=unnamedplus

" Remap escape
noremap <C-[> <esc>
noremap! <C-[> <esc>

" Tab with 4 spaces.
set tabstop=4
set autoindent
set expandtab
set shiftwidth=4

" Show status bar every time.
set laststatus=2
